<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.tvlink.conrol"
       name="TVLINK simple control"
       version="2.0.0"
       provider-name="AlexELEC">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" version="2.22.0+matrix.1"/>
    <import addon="script.module.pyxbmct" version="1.3.1+matrix.1"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">TVLINK simple control addon</summary>
    <description lang="en">Shows and controls the source addresses of the channel that is currently playing.</description>
    <language></language>
    <platform>all</platform>
